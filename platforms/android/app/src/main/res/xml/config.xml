<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android">
    <feature name="AppIconChanger">
        <param name="android-package" onload="true" value="org.apache.cordova.appiconchanger.AppIconChanger" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <resource-file src="res/icon/appiconchanger/icon_phonegap.png" target="app/src/main/res/drawable/icon_phonegap.png" />
    <config-file parent="/*" target="res/values/strings.xml">
        <string name="default_icon_id">fc_icon_default</string>
    </config-file>
    <edit-config file="AndroidManifest.xml" mode="overwrite" target="/manifest/application/activity[@android:name='MainActivity']">
        <activity android:launchMode="singleTop" android:name="MainActivity" />
    </edit-config>
    <custom-preference delete="true" name="android-manifest/application/activity[@android:name='MainActivity']/intent-filter/category[@android:name='android.intent.category.LAUNCHER']" />
    <config-file parent="application" target="AndroidManifest.xml">
        <activity-alias android:configChanges="orientation|screenSize" android:enabled="false" android:icon="@drawable/icon_phonegap" android:label="@string/app_name" android:name="org.apache.cordova.appiconchanger.MainActivity__icon_phonegap" android:noHistory="true" android:targetActivity="MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity-alias android:configChanges="orientation|screenSize" android:enabled="true" android:icon="@mipmap/ic_launcher" android:label="@string/app_name" android:name="org.apache.cordova.appiconchanger.MainActivity__fc_icon_default" android:noHistory="true" android:targetActivity="MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
    </config-file>
    <preference name="loglevel" value="DEBUG" />
</widget>
